  "devDependencies": {
    "@playwright/test": "^1.51.1",
    "@types/node": "^22.13.9",
    "@types/pngjs": "^6.0.5",
    "allure-playwright": "^3.2.1"
  },
  "dependencies": {
    "pixelmatch": "^7.1.0",
    "pngjs": "^7.0.0"
  },
  "optionalDependencies": {
    "canvas": "^3.1.0"
  }
